{
  "compilerOptions": {
    "target": "esnext",
    "baseUrl": "./src",
    "outDir": "dist",
    "plugins": [
      { "transform": "@zerollup/ts-transform-paths", "exclude": ["*"] }
    ],
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": false,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "noEmit": false
  },
  "include": [
    "next-env.d.ts",
    "src/**/*"
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}